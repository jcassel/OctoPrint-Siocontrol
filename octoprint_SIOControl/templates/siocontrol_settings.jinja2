<form class="form-horizontal">
    <h3>IO Connection Settings</h3>
    <div class="control-group">
        <label class="control-label">Communications Port</label>
        
        <div class="controls">
            <select data-bind="value: SIO_Port">
                <option value="" disabled selected>Choose...</option>
                {%for item in plugin_siocontrol_IOAvaliblePort %}
                <option value="{{ item }}">{{ item }}</option>
                {% endfor %} 
            </select>
            <a href="#" title="Refresh connection options"><i class="fas fa-sync"></i></a>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Communications baud rate</label>
        <div class="controls">
            <select data-bind="value: SIO_BaudRate">
                <option value="" disabled selected>Choose...</option>
                {%for item in plugin_siocontrol_IOBaudRates %}
                <option value="{{ item }}">{{ item }}</option>
                {% endfor %} 
            </select>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">Status report interval in ms</label>
        <div class="controls">
            <select data-bind="value: SIO_SI">
                <option value="" disabled selected>Choose...</option>
                {%for item in plugin_siocontrol_IOSIs %}
                <option value="{{ item }}">{{ item }}</option>
                {% endfor %} 
            </select>
        </div>
    </div>
    

    <h3>PSUControl sub plugin integration</h3>
    <div class="control-group">
        <label class="control-label">PSU IO Point:</label>
        <div class="controls">
            <input type="checkbox" class="input-block-level" data-bind="checked: SIO_EnablePSUIOPoint" >
            <select data-bind="value: SIO_PSUIOPoint">
                <option value="" disabled selected>Choose...</option>
                {%for i in range(0,9) %}
                <option value="{{ i }}">{{ i }}</option>
                {% endfor %} 
            </select>
            <input type="checkbox" class="input-block-level" data-bind="checked: SIO_InvertPSUIOPoint" > Invert ?
        </div>
    </div>  
    <h3>Simple Integrations</h3> 
    <div class="control-group">
        <label class="control-label">EStop IO Point:</label>
        <div class="controls">
            <input type="checkbox" class="input-block-level" data-bind="checked: SIO_EnableESTIOPoint" >
            <select data-bind="value: SIO_ESTIOPoint">
                <option value="" disabled selected>Choose...</option>
                {%for i in range(0,9) %}
                <option value="{{ i }}">{{ i }}</option>
                {% endfor %} 
            </select>
            <input type="checkbox" class="input-block-level" data-bind="checked: SIO_InvertESTIOPoint" > Invert ?
        </div>    

        <label class="control-label">Filament Runout IO Point:</label>
        <div class="controls">
            <input type="checkbox" class="input-block-level" data-bind="checked: SIO_EnableFRSIOPoint" >
            <select data-bind="value: SIO_FRSIOPoint">
                <option value="" disabled selected>Choose...</option>
                {%for i in range(0,9) %}
                <option value="{{ i }}">{{ i }}</option>
                {% endfor %} 
            </select>
            <input type="checkbox" class="input-block-level" data-bind="checked: SIO_InvertFRSIOPoint" > Invert ?
        </div>    
    </div>

    <h3>Configuration</h3>
    <div class="row-fluid">
        <div class="span2"><h4>Icon</h4></div>
        <div class="span2"><h4>Label</h4></div>
        <div class="span7"><h4>SIO</h4></div>
    </div>

    <div data-bind="foreach: sioConfigurations">
        <div class="row-fluid siocontrol-settings-row">
            <div class="span2">
                <div class="input-prepend">
                    <span class="add-on"><i class="iconpicker-component"></i></span>
                    <input class="iconpicker span10" type="text" data-bind="value: icon, valueUpdate: 'iconpickerSelected'"/>
                </div>
            </div>
            <div class="span2">
                <input class="span12" type="text" data-bind="value: name"/>
            </div>
            <div class="span7">
                <div class="input-prepend span4">
                    <span class="add-on span4">SIO</span>
                     <select data-bind="value: pin" class="iconpicker span8" >
                        <option value="" disabled selected>SIO</option>
                        {%for i in range(0,9) %}
                        <option value="{{ i }}">{{ i }}</option>
                        {% endfor %} 
                    </select>
                </div>
                <div class="input-prepend span3">
                    <span class="add-on span6">Active</span>
                    <select class="btn-group span6" data-bind="value: active_mode">
                        <option value="active_out_low">Out_LOW</option>
                        <option value="active_out_high">Out_HIGH</option>
                        <option value="active_in_high">In_HIGH</option>
                        <option value="active_in_low">In_LOW</option>
                    </select>
                </div>
                <div class="input-prepend span3">
                    <span class="add-on span6">Default</span>
                    <select class="btn-group span6" data-bind="value: default_state">
                        <option value="default_off">OFF</option>
                        <option value="default_on">ON</option>
                    </select>
                </div>
            </div>
            <div class="span1">
                <a title="Remove SIO Configuration" class="btn btn-danger" data-bind="click: $parent.removeSioConfiguration">
                    <i class="icon-trash"></i>
                </a>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="offset11 span1">
            <a title="Add SIO Configuration" class="btn btn-primary" data-bind="click: addSioConfiguration">
                <i class="icon-plus"></i>
            </a>
        </div>
    </div>



</form>